<!DOCTYPE html>
<html lang="es">


<head>
    <%- include('../partials/head') -%>
        <title>Cargar producto</title>
        <link rel="stylesheet" href="/css/productAdd.css">
</head>


<body>

    <%- include('../partials/background') -%>

        <%- include('../partials/header') -%>

            <!-- FORMULARIO DE CARGA DE PRODDUCTOS -->
            <div class="bar-product">
                <p data-target="#section1">Carga de Productos</p>
                <p data-target="#section2">Stock</p>
            </div>

            <section data-content id="section1" class="active">
                <form class="load-product" method="POST" action="/admin/addProduct">

                    <!-- CARGAR IMÁGENES -->
                    <div class="other-box">

                        <div class="field-product">
                            <label>PRODUCTO:</label>
                            <input class="style-input" type="text" name="product">
                        </div>

                        <div class="grid">
                            <p>IMAGENES: </p>
                            <div class="form-element">
                                <input type="file" id="file-1" accept="image/*" name="imagen">
                                <label for="file-1" id="file-1-preview">
                                    <img src="/img/img-default.png" alt="">
                                </label>
                            </div>
                        </div>
                        <div class="form-elements-flex">
                            <div class="form-elements-ind">
                                <input type="file" id="file-2" accept="image/*">
                                <label for="file-2" id="file-2-preview">
                                    <img src="/img/img-default.png" alt="">
                                </label>
                            </div>
                            <div class="form-elements-ind">
                                <input type="file" id="file-3" accept="image/*">
                                <label for="file-3" id="file-3-preview">
                                    <img src="/img/img-default.png" alt="">
                                </label>
                            </div>
                            <div class="form-elements-ind">
                                <input type="file" id="file-4" accept="image/*">
                                <label for="file-4" id="file-4-preview">
                                    <img src="/img/img-default.png" alt="">
                                </label>
                            </div>
                            <div class="form-elements-ind">
                                <input type="file" id="file-5" accept="image/*">
                                <label for="file-5" id="file-5-preview">
                                    <img src="/img/img-default.png" alt="">
                                </label>
                            </div>
                        </div> 
                        
                        <div class="field-product">
                            <label for="">PRECIO:</label>
                            <input class="style-input" type="number" name="precio">
                        </div>

                        <div class="button-container">
                            <button type="submit" class="btn btn-submit">FINALIZAR</button>
                        </div>

                    </div>

                    <!-- Text Fields -->

                    <div class="desc-product-load">
        
                        <div class="field-flex">
                            <div class="field-gen">
                                <label>GÉNERO:</label>
                                <select class="style-select" name="genero">
                                    <option hidden selected>Elija el género</option>
                                    <option value="genero1">género 1</option>
                                    <option value="genero2">género 2</option>
                                    <option value="genero3">género 3</option>
                                </select>
                            </div>
                            <div class="field-subgen">
                                <label>SUBGÉNERO:</label>
                                <select class="style-select" name="subGenero">
                                    <option hidden selected>Elija el subgénero</option>
                                    <option value="subgénero1">subgénero 1</option>
                                    <option value="subgénero2">subgénero 2</option>
                                    <option value="subgénero3">subgénero 3</option>
                                </select>
                            </div>
                        </div>
                        <div class="display-flex-box">
                            <div class="desc-flex">
                                <label for="">DESCRIPCIÓN:</label>
                                <textarea class="style-textarea" name="descripcion" cols="30" rows="20"></textarea>
                            </div>
                            <div class="desc-flex">
                                <label for="">REQUISITOS:</label>
                                <textarea class="style-textarea" name="" id="" cols="30" rows="20"></textarea>
                            </div>
                        </div>

                        <div class="fields">
                            <div class="field-product">
                                <label for="">KEY:</label>
                                <input class="style-input" type="text" name="key">
                            </div>

                            <div class="field-trailer">
                                <label for="">TRAILER:</label>
                                <input class="style-input" type="text" name="trailer" placeholder="URL">
                            </div>

                        </div>

                    </div>

                </form>
            </section>

            <section data-content id="section2" class="section-2">

                <h2>STOCK</h2>

                <div class="detail-stock">

                    <% dataBase.forEach(element => {
                        %>
                        <div class="game-stock">
                            <div class="game-name">
                                <img src="/img/<%-element.image%>" alt="">
                                <h5><%- element.product %></h5>
                            </div>
                            <div class="price">
                                <p><%- element.price %></p>
                            </div>
                            <div class="edit-remove">
                                <a href="/admin/editProduct/<%-element.id%>" id="edit">editar</a>
                                <label id="remove" for="buttonSubmitDelete">eliminar</label>
                            </div>
                        </div>
                        <form method="POST" action="/admin/deleteProduct/<%- element.id %>?_method=DELETE">
                            <button type="submit" class="btn btn-submit" style="display: none;" id="buttonSubmitDelete"></button>
                        </form>
                        <%
                    }) %>

                </div>
            </section>

            <%- include('../partials/footer') -%>

                <script src="/js/productAdd.js"></script>
                <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
                    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
                    crossorigin="anonymous"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
                    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
                    crossorigin="anonymous"></script>
                <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
                    integrity="pa384-JZR6SpepU02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
                    crossorigin="anonymous"></script>
                <script src="/js/index.js"></script>
</body>

</html>