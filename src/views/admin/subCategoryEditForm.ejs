<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') -%>
    <title>SubCategorias</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
    <%- include('../partials/background') -%>
    <%- include('../partials/sideBarAdmin') -%>
    <%- include('../partials/adminHeader') -%>

    <section class="categories-container">
        
        <div class="cat-title">
            <h1>Editar subcategoria</h1>
        </div>

        <form action="/admin/subcategories/edit/<%=subcategory.id%>?_method=PUT" method="POST">

            <label for="name">Nombre:</label>
            <input type="text" name="name" id="inputName" value="<%= locals.old ? old.name : subcategory.name %>">
            <% if (locals.errors && errors.name) { %>
                <small class="text-danger"><%= errors.name.msg %></small>
            <% } %>
            <span class="text-danger" id="inputNameErrors"></span>

            <div class="col-12">
                <select class="form-select categorySelect" id="specificSizeSelect" name="category">
                  <option selected hidden value="">Categorias</option>
                 <% locals.category.forEach(category => { %>
                    <option value="<%- category.id %>" <%- locals.old && old.category == category.id ? "selected" : category.id == subcategory.categoryId ? "selected" : "" %>><%- category.name %></option>
                 <% }) %>
                </select>
            </div>
            
            <button type="submit">Guardar</button>
            <span class="text-danger" id="submitErrors"></span>
        </form>

    </section>
    <script src="/js/adminCategories.js"></script>
    <script src="/js/adminDashboard.js"></script>
    <script src="/js/validations/subcategoriesEditValidate.js"></script>
</body>
</html>