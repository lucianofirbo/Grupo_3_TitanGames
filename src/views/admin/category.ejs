<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') -%>
    <title>Categorias</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/editSubyCat.css">
</head>
<body>
    <%- include('../partials/background') -%>
    <%- include('../partials/sideBarAdmin') -%>
    <%- include('../partials/adminHeader') -%>

    <section class="categories-container">

        <div class="categorytitle-container">
            <div class="cat-title">
                <h1>Categorias</h1>
            </div>
    
            <div class="add-category">
                <a href="/admin/categories/create"><i class="fas fa-plus"></i></a>
            </div>
        </div>
        
        <table class="table-responsive">

            <thead class="table-name">
                <tr class="header-name">
                    <th scope="col">Nombre</th>
                </tr>
            </thead>
            <tbody class="table-body-names">
                <% categories.forEach(category => { %>
                    <tr class="rows-names">
                        <td><%- category.name %></td>
                        <td class="td-icons">
                            <a href="/admin/categories/edit/<%= category.id %>">
                                <i class='bx bx-edit-alt' ></i>
                            </a>
                            <form action="/admin/categories/delete/<%- category.id %>?_method=DELETE" method="POST">
                                <button type="submit"><i class='bx bxs-trash' onclick="return confirm(`¿Estás seguro de querer eliminar la categoría <%- category.name %>?`)"></i></button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>

        </table>
            
    </section>

    <script src="/js/adminDashboard.js"></script>   
</body>
</html>