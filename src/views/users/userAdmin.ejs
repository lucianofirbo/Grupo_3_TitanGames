<!DOCTYPE html>
<html lang="en">
<head>    
    <%- include('../partials/head') -%>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/adminUsers.css">
    <title>Admin users</title>
</head>
<body>

    <%- include('../partials/background') -%>

    <%- include('../partials/header') -%>

    <main>

        <form action="/admin/adminSearchUser" method="GET" class="search-form-admin">
            <input type="text" name="keywords" placeholder="Buscar" class="search-form_input">
            <label class="label-header" for="buttonSearchUser"><i class="fas fa-search"></i></label>
            <button type="submit" class="search-form_button" id="buttonSearchUser"></i></button>
        </form>

        <div class="userCards">
            <% users.forEach(user => { %>
                <form action="/admin/userEdit/<%-user.id%>?_method=PUT" class="formCard" method="POST">
                    <div class="userCard">
                        <img src="/img/users/<%- user.avatar %>">
                        <p>User: <%-user.userName%></p>     
                        <p>Email: <%-user.email%></p>
                        <select name="selectRol" id="selectRol">
                            <% if ( user.rol == 1) { %> 
                                <option value="0">User</option>
                                <option selected value="1">Admin</option>
                            <% } else { %> 
                                <option value="1">Admin</option>
                                <option selected value="0">User</option>
                            <% } %>
                        </select>                        
                        <div class="editDelete">
                            <button type="submit" class="edit" >Editar</button>
                            <button href="/admin/userDelete/<%-user.id%>" class="delete">Eliminar</button>
                        </div>
                    </div>
                </form>
            <% }) %>
        </div>
    </main>

    <%- include('../partials/footer') -%>
    
</body>
</html>