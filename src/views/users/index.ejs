<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') -%>
    <title>Titan Games</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="css/index.css">
</head>

<body>

    <%- include('../partials/background') -%>

    <%- include('../partials/header') -%>

    <main>
    
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="margin-top: 0;">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class=""></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1" class=""></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2" class="active"></li>
            </ol>
            <div class="carousel-inner" style="margin-top: 0;">
                
                <div class="carousel-item">
                    <a href="http://localhost:3000/product/detail/<%- productSale[0].id %>">
                        <img src="img/games/<%-productSale[0].productImage[0].image %>" class="d-block w-100" alt="game">
                    </a>
                </div>
                <div class="carousel-item">
                    <a href="http://localhost:3000/product/detail/<%- productSale[1].id %>">
                        <img src="img/games/<%-productSale[1].productImage[0].image %>" class="d-block w-100" alt="game">
                    </a>
                </div>
                <div class="carousel-item active">
                    <a href="http://localhost:3000/product/detail/<%- productSale[2].id %>">
                        <img src="img/games/<%-productSale[2].productImage[0].image %>" class="d-block w-100" alt="game">
                    </a>
                </div>
                
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <div class="polygon-container">
                <div class="polygon-container-info">
                    <p class="info-polygon">MÁS DE</p>
                    <p class="info-polygon" id="polygon-disc">30%</p>
                    <p class="info-polygon">DESCUENTO</p>
                </div>               
            </div>
        </div>
    
        <div class="separator">
            <p>Ofertas Especiales</p>
        </div>

        <!-- Productos en oferta -->

        
            <div class="special-offer">

                <div class="special-offer-game">    
                    <a href="http://localhost:3000/searchPrice/250">
                        <img src="img/blob4.png" alt="" class="sale-img3">       
                    <div class="special-offer-details">
                        <p>HASTA</p>
                        <p id="price-offer">$250</p>
                    </div>  
                    </a>       
                </div>
        
                <div class="special-offer-game">        
                    <a href="http://localhost:3000/searchPrice/500">
                        <img src="img/blob5.png">         
                    <div class="special-offer-details">
                        <p>HASTA</p>
                        <p id="price-offer">$500</p>
                    </div>   
                    </a>   
                </div>
        
                <div class="special-offer-game">        
                    <a href="http://localhost:3000/searchPrice/100000">
                        <img src="img/blob6.png" alt="">                          
                    <div class="special-offer-details">
                        <p>MÁS DE</p>
                        <p id="price-offer">$500+</p>
                    </div>   
                    </a>       
                </div>

            </div>
        
        

        <div class="separator">
            <p>Últimos lanzamientos</p>
        </div>

    <section class="games-main">
        <div class ="games-main-container">            
        <% for (i=0; i < 6; i++) { %>
            <div class="card-container">
                <div class="imgBx">
                    <a href="/product/detail/<%-lastGames[i].id%>"><img src="img/games/<%-lastGames[i].productImage[0].image%>"></a>
                </div>
                <a href="/product/detail/<%-lastGames[i].id%>"><div class="content-card">
                    <div class="contentBx">
                        <h3><%- lastGames[i].product %><br> <span>$<%- lastGames[i].price %></span> </h3>
                    </div>
                    <div class="icon-cart">
                        <i class="fas fa-cart-plus"></i>
                    </div> 
                </div></a>
            </div>
        <% } %>
        </div>
    </section>

    <div class="separator">
        <p>Descubrir</p>
    </div>

        <div class="discover">            
    
            <div class="categories">
                <p id="active">Descubrir juegos</p>
                <p id="active2">Lo mas vendido</p>
                <p id="active3">Lo nuevo</p>
            </div>
    
            <section class="games" id="discover-games">
                <% for (i=0; i < 3;i++) { %>
                    <% let productRandom = Math.floor(Math.random() * product.length) %>
                    <div class="game">    
                        <a href="http://localhost:3000/product/detail/<%-product[productRandom].id%>">
                            <img src="img/games/<%- product[productRandom].productImage[0].image %>" alt="" class="games-img-w">
                        </a>        
                        <div class="game-text">
                            <p><%- product[productRandom].product %></p>
                            <div class="price">
                                <% if (product[productRandom].offers) { %>
                                    <p class="sale-box"><%-product[productRandom].offers%>%</p>
                                <% } %>
                                <p>$<%- product[productRandom].price %></p>
                            </div>  
                        </div>       
                    </div>
                    <hr class="game-discover-hr">
                <% } %>    
            </section>
    
            <section class="games" id="top-sales">
                <% for(i=0; i < 3 ;i++) { %>
                    <div class="game">
                        <a href="http://localhost:3000/product/detail/<%-product[i].id%>">
                            <img src="img/games/<%- product[i].productImage[0].image %>" alt="ni no kuni 2" class="games-img-w">
                        </a>    
                        <div class="game-text">
                            <p><%- product[i].product %></p>
                            <div class="price">
                                <% if (product[i].offers) { %>
                                    <p class="sale-box"><%-product[i].offers%>%</p>
                                <% } %>
                                <p>$<%- product[i].price %></p>
                            </div>  
                        </div>    
                    </div>
                    <hr class="game-discover-hr">
                <% } %>
            </section>
    
            <section class="games" id="newest">      
                <% for(i=0; i < 3 ;i++) { %>
                    <div class="game">    
                        <a href="http://localhost:3000/product/detail/<%-lastGames[i].id%>">
                            <img src="img/games/<%- lastGames[i].productImage[0].image %>" alt="ni no kuni 2" class="games-img-w">
                        </a>    
                        <div class="game-text">
                            <p><%- lastGames[i].product %></p>    
                            <div class="price">
                                <% if (lastGames[i].offers) { %>
                                    <p class="sale-box"><%-lastGames[i].offers%>%</p>
                                <% } %>
                                <p>$<%- lastGames[i].price %></p>
                            </div>    
                        </div>    
                    </div>
                    <hr class="game-discover-hr">               
                <% } %>
            </section>  
    
        </div>

    </main>   

    <%- include('../partials/footer') -%>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
    <script src="js/index.js"></script>
</body>

</html>