<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') -%>
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/css/admin.css">
    <title>Admin Dashboard</title>
</head>
<body>
    <%- include('../partials/background') -%>
    <%- include('../partials/sideBarAdmin') -%>
    <%- include('../partials/adminHeader') -%>

    <main class="main-dashboard">

        <div class="container-admin-main">
            
            <div class="dashboard-title-container">
                <h1>Dashboard Admin</h1>
            </div>

            <div class="row-admin-data">

                <div class="row-data">
                    <div class="title-data">
                        <h5>Juegos</h5>
                        <span><%- product.length %></span>
                    </div>
                    <div class="icon-data">
                        <i class='bx bx-bookmark-alt'></i>
                    </div>
                </div>

                <div class="row-data">
                    <div class="title-data">
                        <h5>Generos</h5>
                        <span><%- genres.length %></span>
                    </div>
                    <div class="icon-data">
                        <i class='bx bxs-data' ></i>
                    </div>
                </div>

                <div class="row-data">
                    <div class="title-data">
                        <h5>Usuarios</h5>
                        <span><%- admin.length %></span>
                    </div>
                    <div class="icon-data">
                        <i class='bx bx-user' ></i>
                    </div>
                </div>

            </div>
            
            <div class="row-admin-data2">

                <div class="row-data2">
                    <% for (i=0; i < 1; i++) { %>
                        <div class="div-title-lastproduct">
                            <h3>Ultimo juego agregado: <%= product[i].product %></h3>
                        </div>
                        <div class="img-lastproduct">
                            <img src="/img/games/<%-product[i].productImage[0].image%>" alt="">
                        </div>
                        <div class="detail-lastproduct">
                            <p><%= product[i].description %></p>
                        </div>
                        <div class="link-product">
                            <a href="/product/detail/<%-product[i].id%>">Ir al producto</a>
                        </div>
                    <% } %>
                </div>

                <div class="row-dataGenres">
                    <div class="div-title-lastproduct">
                        <h3>Generos en la base de datos</h3>
                    </div>

                    <% for (i=0; i < 6; i++) { %>
                        <div class="all-genres">
                            <h5><%= genres[i].name %></h5>
                        </div>
                    <% } %>

                    <div class="see-more">
                        <a href="/admin/categories">Ver m√°s +</a>
                    </div>

                </div>
            </div>

        </div>

    </main>

    <script src="/js/adminDashboard.js" defer></script>
</body>
</html>