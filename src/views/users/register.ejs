<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') -%>    
    <link rel="stylesheet" href="css/index.css">
</head>
<body>
    <%- include('../partials/background') -%>
    <%- include('../partials/header') -%>

    <!-- Registro popUp -->

    <div class="register-card" id="register-card">
        <span class="close" id="close">x</span>
        <div class="register-container">
            <form class="form-container">
                <img src="/img/logo.png" alt="logotipo" class="logo-register">
                <div class="input-container">
                    <input class="input-style" type="email" name="userName" placeholder="Ingrese su usuario">
                    <span class="error-message">Debe ingresar su usuario</span>
                </div>
                <div class="input-container">
                    <input class="input-style" type="email" name="email" placeholder="Ingrese su email">
                    <span class="error-message">Debe ingresar su email</span>
                </div>
                <div class="input-container">
                    <input class="input-style" type="password" name="pass" placeholder="Contraseña">
                    <span class="error-message">Debe ingresar su contraseña</span>
                </div>
                <div class="button-container">
                    <span class="error-message">Credenciales inválidas</span>
                    <button type="submit" class="submit-register">Registrarse</button>
                </div>
                <div class="redirect-register" id="redirect-login">
                    <span>
                        <h5 id="login">¿tienes una cuenta?</h5>
                    </span>
                </div>
            </form>
        </div>
    </div>
    
</body>
</html>