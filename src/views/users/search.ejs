            <section class="games" id="discover-games">

                <% if (result.length > 0) { %>
                    <% result.forEach(product => { %>
                        <div class="game">
                            <a href="http://localhost:3000/product/detail/<&- product.id &>">                        
                                <img src="/img/<%- product.image %>" alt="img del juego" class="games-img-w">
                            </a>
                            <div class="game-text">
                                <p><%= product.product %></p>
                                <div class="price">
                                    <p class="sale-box">-10%</p>
                                    <p><%= product.price %></p>
                                </div>
                            </div>
                        </div>
                        <hr class="game-discover-hr">
                    <% }) %>
                <% } else {  %>
                    <div class="nose">
                        <h2 class="products-title" style="color: tomato;">No se encontró ningún jueguito que coincida con esa búsqueda</h2>
                    </div>
                <% } %>
